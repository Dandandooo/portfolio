---
import "@/styles/background-lines.css";
import "@/styles/fonts.css";
import Navbar from "@/components/Navbar.astro";

import * as icons from "@/assets/project-icons.ts";

const tech_stack = [
	[icons.pythonIcon, "python"],
	[icons.zigIcon, "Zig"],
	[icons.rustIcon, "Rust"],
	[icons.jupyterIcon, "Jupyter"],
	[icons.cIcon, "C"],
	[icons.cppIcon, "C++"],
	[icons.cudaIcon, "CUDA"],
	[icons.bashIcon, "Bash"],
	[icons.nixIcon, "Nix"],
	[icons.javaIcon, "Java"],
	[icons.ocamlIcon, "OCaml"],
	[icons.javascriptIcon, "JavaScript"],
	[icons.reactIcon, "React"],
	[icons.latexIcon, "LaTeX"],
	[icons.dockerIcon, "Docker"],
	[icons.gitIcon, "Git"],
	[icons.godotIcon, "Godot"],
	[icons.unityIcon, "Unity"],
	[icons.macosIcon, "MacOS"],
]

import photo from "@/assets/images/miami.jpeg?url";

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon-g.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Daniel Philipov</title>
	</head>
	<body>
		<Navbar current="home" />
		<main>
			<header>
				<p class="kicker">Student, Researcher, Athlete</p>
				<h1>Daniel Philipov</h1>
			</header>
			<section class="profile-grid" aria-label="Profile layout">
				<div class="photo-frame" aria-label="Photo frame placeholder">
					<img src={photo} alt="handsome person">
					<!--<span>Photo</span>-->
				</div>
				<article class="bio-box">
					<h3>About Me</h3>
					<p>
						Hi, my name is Daniel Philipov! I am a Junior at UIUC studying
						Computer Science and Physics, and minoring in Astronomy.
					</p>
					<p>
						My hobbies include coding, competitive swimming, skiing, soccer,
						and playing video games with my friends and family.
					</p>
					<p>
						When it comes to coding, I'm driven by the beauty of code. I strive to achieve
						neatness, simplicity, and performance in everything I make, whether it be an
						AI algorithm, platformer game, or even this website.
					</p>
					<p>
						You can find me this summer at Google Sunnyvale, working on overhauling
						the GMail spam detection engine.
					</p>
					<h3>My Tech Stack</h3>
					{tech_stack.map(([icon, name], _) =>
						<img src={icon} alt={name} title={name} height="24pt" width="30pt">
					)}
				</article>
			</section>
		</main>
	</body>
</html>

<style>
	:global(:root) {
		--page-bg-color: #170f14;
		--page-background:
			linear-gradient(180deg, #462434 0%, #7e3850 26%, #d67667 46%, #e8b97a 58%, #df86a6 70%, #283456 100%),
			radial-gradient(90vw 45vh at 52% 58%, #ffd96a42, transparent 62%),
			radial-gradient(100vw 70vh at 10% -8%, #ffb58a99, transparent 58%),
			radial-gradient(100vw 70vh at 90% -12%, #ff8fc0a6, transparent 60%);
		--line-pattern-color: rgba(255, 235, 210, 0.16);
		margin: 0;
		height: 100%;
		overflow: hidden;
		color: #f8fafc;
	}

	:global(body) {
		margin: 0;
		height: 100vh;
		overflow: hidden;
		color: #f8fafc;
		position: relative;
		isolation: isolate;
		font-family: "Lexend", "Segoe UI", sans-serif;
	}

	:global(body::after) {
		content: "";
		position: fixed;
		inset: 0;
		pointer-events: none;
		background: rgba(7, 10, 17, 0.28);
		z-index: -1;
	}

	main {
		width: min(1120px, 92vw);
		height: calc(100vh - 5.5rem);
		margin: 1.25rem auto 2.5rem;
		display: grid;
		align-content: center;
		gap: 1rem;
	}

	.kicker {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: #ffd97e;
		font-size: 0.75rem;
	}

	h1 {
		font-family: "Rajdhani", sans-serif;
		font-size: clamp(2.35rem, 6vw, 4.6rem);
		letter-spacing: 0.04em;
		margin: 0;
		color: #f8fafc;
	}

	.profile-grid {
		display: grid;
		grid-template-columns: minmax(220px, 38%) minmax(260px, 1fr);
		gap: clamp(1rem, 2.2vw, 1.5rem);
		align-items: stretch;
	}

	.photo-frame,
	.bio-box {
		border: 1px solid #ffffff26;
		background: #090d16bd;
		border-radius: 16px;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
	}

	.photo-frame {
		min-height: clamp(300px, 46vh, 520px);
		position: relative;
		box-shadow: inset 0 0 0 1px rgba(252, 252, 250, 0.12);
		overflow: hidden;
	}

	.photo-frame img {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
		display: block;
		object-fit: cover;
		object-position: center center;
	}

	.photo-frame span {
		letter-spacing: 0.05em;
		color: #e2e8f0cc;
	}

	.bio-box {
		font-family: "Lexend", "Segoe UI", sans-serif;
		font-size: clamp(0.95rem, 1.35vw, 1.08rem);
		line-height: 1.6;
		color: #f8fafc;
		padding: clamp(1rem, 2vw, 1.35rem);
	}

	.bio-box p {
		margin: 0 0 0.9rem;
	}

	.bio-box p:last-child {
		margin-bottom: 0;
	}

	@media (max-width: 840px) {
		.profile-grid {
			grid-template-columns: 1fr;
		}

		.photo-frame {
			min-height: clamp(240px, 40vh, 340px);
		}
	}
</style>
